= render 'homes/header'

.createPage
  .createPage__title
    .createPage__title__en
      Create
    .createPage__title__ja
      〜問題を作る〜
  .createPage__answer
    = form_for @answer, url:answer_questions_path(@answer) do |f|

      .createPage__answer__formBox
        .createPage__answer__formBox__up
          .createPage__answer__formBox__up__box
            .createPage__answer__formBox__up__box__answerTitle
              = f.label :answer, "Answer / 答え"
            .createPage__answer__formBox__up__box__formImg
              .createPage__answer__formBox__up__box__formImg__answerForm
                = f.text_field :answer
              .createPage__answer__formBox__up__box__formImg__answerImage
                = f.label :answer_image, "Image" do
                  = icon('fas', 'image')
                  = f.file_field :answer_image, class: "hidden"

          .createPage__answer__formBox__up__box
            .createPage__answer__formBox__up__box__select
              = f.label :four_select1, "Select / 選択肢1"
            .createPage__answer__formBox__up__box__formImg
              .createPage__answer__formBox__up__box__formImg__form
                = f.text_field :four_select1
              .createPage__answer__formBox__up__box__formImg__image
                = f.label :four_image1, "Image" do
                  = icon('fas', 'image')
                  = f.file_field :four_image1, class: "hidden"

        .createPage__answer__formBox__down
          .createPage__answer__formBox__down__box
            .createPage__answer__formBox__down__box__select
              = f.label :four_select2, "Select / 選択肢2"
            .createPage__answer__formBox__down__box__formImg
              .createPage__answer__formBox__down__box__formImg__form
                = f.text_field :four_select2
              .createPage__answer__formBox__down__box__formImg__image
                = f.label :four_image2, "Image" do
                  = icon('fas', 'image')
                  = f.file_field :four_image2, class: "hidden"

          .createPage__answer__formBox__down__box
            .createPage__answer__formBox__down__box__select
              = f.label :four_select3, "Select / 選択肢3"
            .createPage__answer__formBox__down__box__formImg
              .createPage__answer__formBox__down__box__formImg__form
                = f.text_field :four_select3
              .createPage__answer__formBox__down__box__formImg__image
                = f.label :four_image3, "Image" do
                  = icon('fas', 'image')
                  = f.file_field :four_image3, class: "hidden"

      .createPage__answer__formBox
        .createPage__answer__formBox__explain
          = f.label :explain, "Explain / 答えの解説"
        .createPage__answer__formBox__explainForm
          = f.text_area :explain
      .createPage__answer__formBox
        .createPage__answer__formBox__genre
          = f.label :genre, "Genre / ジャンル"
        .createPage__answer__formBox__genreForm
          = f.select :genre, [['test0'], ['test1'], ['test2']], { include_blank: true }
      .createPage__answer__formBox
        = f.submit "Next", class: "createPage__answer__formBox__btn"

= render 'homes/footer'