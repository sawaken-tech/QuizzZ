= render 'homes/header'
- if user_signed_in?
  .questionsIndexEdit
    .questionsIndexEdit__title
      .questionsIndex__title__en
        Edit
      .questionsIndex__title__ja
        〜編集〜
    .questionsIndexEdit__container
      - @my_questions.each do |question| 
        .questionsIndexEdit__container__box
          .questionsIndexEdit__container__box__title
            No#{question.id}
          .questionsIndexEdit__container__box__questionBox
            .questionsIndexEdit__container__box__questionBox__sentence
              = question.sentence
            .questionsIndexEdit__container__box__questionBox__btn
              .questionsIndexEdit__container__box__questionBox__btn__edit
                = link_to edit_question_path(question) do
                  = icon('fas', 'cog')
              .questionsIndexEdit__container__box__questionBox__btn__delete
                = link_to question, method: :delete, data: { confirm: "削除しますか？" } do
                  = icon('fas', 'trash-alt')


- else
  = render 'login_view'

= render 'homes/footer'