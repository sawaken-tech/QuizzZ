= render 'homes/header'

.commentPage
  .commentPage__title
    comment
  .commentPage__form
    = form_for [@question, @comment] do |f|
      .commentPage__form__textarea
        = f.text_area :comment
      .commentPage__form__sendBtn
        = f.submit "send"

  .commentPage__messages
    .commentPage__messages__title
      .commentPage__messages__title__en
        comments /
      .commentPage__messages__title__ja
        コメント一覧
    .commentPage__messages__container
      - @comments.each do |comment|
        .commentPage__messages__container__box
          .commentPage__messages__container__box__name
            = link_to comment.user.nickname, "#"
            ：
          .commentPage__messages__container__box__comment
            = comment.comment


= render 'homes/footer'