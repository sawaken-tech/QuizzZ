- if @question.iine?(current_user)
  = fomr_for(@question.rates.find_by(user_id: current_user.id), method: :delete, remote: true) do |f|
    = button_tag(class: "btn btn-default btn-xs") do
      = content_tag :span, "#", class: "glyphicon glyphicon-heart"
- else
  = form_for(@question.rates.build, remote: true) do |f|
    = hidden_field_tag :question_id, @question.id
    = button_tag(class: "btn btn-default btn-xs") do
      = content_tag :span, "#", class: "glyphicon glyphicon-heart-empty"