= render 'homes/header'

.profilePage
  .profilePage__title
    .profilePage__title__en
      Edit Password
    .profilePage__title__ja
      パスワードの編集

  .profilePage__formBox
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .profilePage__formBox__container
        .profilePage__formBox__container__title
          New password
        .profilePage__formBox__container__form
          = f.password_field :password, autocomplete: "new-password"

      .profilePage__formBox__container
        .profilePage__formBox__container__title
          New password(confirmation)
        .profilePage__formBox__container__form
          = f.password_field :password_confirmation, autocomplete: "new-password"

      .profilePage__formBox__container
        .profilePage__formBox__container__title
          Current password
        .profilePage__formBox__container__form
          = f.password_field :current_password, autocomplete: "current-password"

      .profilePage__formBox__container
        .profilePage__formBox__container__btn
          = f.submit "update"

= render 'homes/footer'