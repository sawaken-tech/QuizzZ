.userCreate
  .userCreate__main
    = form_for(resource, as: resource_name, url: new_user_registration_path(resource_name)) do |f|
      .userCreate__main__formbox

        .userCreate__main__formbox__title
          = f.label :nickname, "nickname"
        .userCreate__main__formbox__form
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname"

      .userCreate__main__formbox
        .userCreate__main__formbox__title
          = f.label :email, "e-mail"
        .userCreate__main__formbox__form
          = f.email_field :email, autocomplete: "email"

      .userCreate__main__formbox
        .userCreate__main__formbox__title
          = f.label :password, "password"
        .userCreate__main__formbox__form
          = f.password_field :password, autocomplete: "off"
        .userCreate__main__formbox__title
          = f.label :password_confirmation, "パスワード再入力"
        .userCreate__main__formbox__form
          = f.password_field :password_confirmation, autocomplete: "off"
      
      .userCreate__main__submitBtn
        = f.submit "Sign up"

