.userCreate
  .userCreate__main
    = form_for(@user, url: registration_path(resource_name)) do |f|
      .userCreate__main__up
        .userCreate__main__up__formbox
          .userCreate__main__up__formbox__title
            = f.label :nickname, "name"
          .userCreate__main__up__formbox__form
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname"

        .userCreate__main__up__formbox
          .userCreate__main__up__formbox__title
            = f.label :email, "e-mail"
          .userCreate__main__up__formbox__form
            = f.email_field :email, autocomplete: "email"

      .userCreate__main__down
        .userCreate__main__down__formbox
          .userCreate__main__down__formbox__title
            = f.label :password, "password"
          .userCreate__main__down__formbox__form
            = f.password_field :password, autocomplete: "off"
        .userCreate__main__down__formbox
          .userCreate__main__down__formbox__title
            = f.label :password_confirmation, "Re-password"
          .userCreate__main__down__formbox__form
            = f.password_field :password_confirmation, autocomplete: "off"
      
      .userCreate__main__submit
        .userCreate__main__submit__btn
          = f.submit "make"